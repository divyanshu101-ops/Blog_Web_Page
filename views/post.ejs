<%- include("partials/header") %>

<div class="container">
  <h1 class="post-title"><%= post.title %></h1>
  <p class="post-date"><%= post.createdAt.toDateString() %></p>

  <div class="post-content">
    <p><%= post.content %></p>
  </div>

  <div class="tags">
    <% post.tags.forEach(tag => { %>
      <span class="tag"><%= tag %></span>
    <% }) %>
  </div>
</div>

<%- include("partials/footer") %>
